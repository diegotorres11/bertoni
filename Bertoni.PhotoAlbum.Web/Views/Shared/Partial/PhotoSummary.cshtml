@model Bertoni.PhotoAlbum.Domain.Entity.Photo

@{ 
    var ajaxOpts = new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "commentsContainer",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "progress",
        LoadingElementDuration = 1000,
        OnSuccess = "onPhotoSuccess"
    };
}

<div class="row">
    <div class="col-sm-6 margin-20">
        @Model.Title
    </div>
    <div class="col-xs-6 col-sm-2 margin-20">
        <a href="@Model.Url" target="_blank" title="Open image">
            <img src="@Model.ThumbnailUrl" width="50" height="50" />
        </a>
    </div>
    <div class="col-xs-6 col-sm-2 margin-20">
        @Ajax.ActionLink("View comments", "Get", "Comment", 
            new { photoId = Model.Id },
            ajaxOpts,
            new { @class = "btn btn-success", onclick = "return setCommentTitle('" + Model.Title + "');" })
    </div>
</div>